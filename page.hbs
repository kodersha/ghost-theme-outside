{{#contentFor "title"}}{{meta_title}}{{/contentFor}}

{{!< default}}
{{> header}}

{{#post}}
<main>
  <article class="post-single {{post_class}}">
    {{#match @page.show_title_and_feature_image}}
      <h1>{{title}}</h1>

      {{#if feature_image}}
        <figure class="kg-thumbnail">
          <img loading="lazy" class="emerge" data-effect="slide" data-spin="true" src="{{img_url feature_image size="thumbnail"}}" alt="{{title}}" />
          {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
          {{/if}}
        </figure>
      {{/if}}
    {{/match}}
    {{content}}
  </article>
</main>
{{/post}}